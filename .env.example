# Rezoomex MCP Server Configuration

# Server Configuration
PORT=10000
NODE_ENV=development

# Rezoomex API Configuration
REZOOMEX_BASE_URL=https://awsapi-gateway.rezoomex.com
REZOOMEX_LOGIN_URL=https://workspace.rezoomex.com/account/login

# No default projects - all project_id and persona_id must be provided

# Authentication (Optional - for pre-configured environments)
# REZOOMEX_BEARER_TOKEN=your_bearer_token_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/rezoomex-mcp.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*
